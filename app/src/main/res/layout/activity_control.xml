<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:orientation="vertical"
    tools:context="control.lizimumu.www.ui.ControlActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_gravity="center">
        <ImageView
            android:contentDescription="@null"
            android:id="@+id/close"
            android:layout_alignParentEnd="true"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:background="?selectableItemBackground"
            android:src="@drawable/ic_close"
            android:layout_width="48dp"
            android:layout_height="48dp" />
        <ImageView
            android:layout_centerInParent="true"
            android:contentDescription="@null"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/img_device" />
        <TextView
            android:id="@+id/device_ip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/action_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_selector_left"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/btn_left"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white_30" />
        <TextView
            android:id="@+id/action_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_selector_right"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/btn_right"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>
