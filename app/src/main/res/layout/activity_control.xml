<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="control.lizimumu.www.remotecontrol.ControlActivity">

    <ImageView
        android:id="@+id/close"
        android:layout_gravity="end"
        android:padding="16dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_icon"
        android:src="@drawable/ic_close"
        android:layout_width="48dp"
        android:layout_height="48dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="84dp">

        <ImageView
            android:contentDescription="@null"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/img_device" />

        <TextView
            android:id="@+id/device_ip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="88dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/action_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_selector_left"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/btn_left"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white_30" />

        <TextView
            android:id="@+id/action_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_selector_right"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/btn_right"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>
